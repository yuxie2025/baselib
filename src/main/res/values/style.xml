<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!--普通dialog-->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AlertNoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--以下常见控件样式-->

    <style name="MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MW.LlVertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WW.LlVertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MM.LlVertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MW.LlHorizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WW.LlHorizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MM.LlHorizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MM.BaseLlVertical">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/windowBackground</item>
    </style>

    <style name="MM.Rl">
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="MW.Rl">
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="MM.ScVertical">
        <item name="android:orientation">vertical</item>
    </style>

</resources>